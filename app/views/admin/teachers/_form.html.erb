<%= simple_form_for([:admin, resource], html: { class: 'inline' }) do |form| %>
  <%= render 'error_notification', form: form %>
  <%= form.input :name %>
  <%= form.input :email %>
  <%= form.input :grove_id, include_blank: false, collection: current_user.groves.map{|x| [x.name, x.id]} %>
  <%= form.association :roles, as: :check_boxes, :collection => Role.all.map { |o| [o.name.titleize, o.id] } %>
  <%= form.submit 'Save' %>
<% end %>
