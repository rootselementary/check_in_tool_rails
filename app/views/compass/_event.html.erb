<div class="<%= "container event-details #{event.status_class}" %>" data-endtime="<%= event.end_time %>" data-duration="<%= event.duration %>">

  <div class="event-images row">
    <div class="col-md-4 event-image">
      <%= image_tag event.location_image, class: "img-responsive center-block" %>
      <br>
      <h3><%= event.location_name %></h3>
    </div>
    <div class="col-md-4 compass-image">
      <%= image_tag event.activity_image, class: "img-responsive center-block" %>
      <br>
      <h3><%= event.activity_name %></h3>
    </div>
    <div class="col-md-4 event-image">
      <%= image_tag event.creator_image, class: "img-responsive center-block" if event.creator_image%>
      <br>
      <h3><%= event.creator_name %></h3>
    </div>
  </div>
  <br>
  <% if !event.scanned_in? %>
    <div class="col-md-12 text-center" id="scan-location-button">
      <%= link_to fa_icon("qrcode", text: "Scan"), "scan://scan?callback=#{checkin_url}?location_id=#{event.location_id}", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
